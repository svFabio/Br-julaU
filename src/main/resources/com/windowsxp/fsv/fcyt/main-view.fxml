<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.windowsxp.fsv.fcyt.PlanController">

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Bienvenido">
                    <content>
                        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f2f5;">
                            <children>
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="¡Bienvenido al Sistema!" />
                                <Label style="-fx-font-size: 16px;" text="Navega a la pestaña 'ElPlan' para ver tu progreso." />
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="ElPlan">
                    <content>
                        <BorderPane>
                            <top>
                                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 5 10 5 10;">
                                    <children>
                                        <Button fx:id="agregarButton" onAction="#onAgregarMateriaClick" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="+" />
                                        <Button fx:id="eliminarButton" onAction="#onEliminarMateriaClick" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #F44336; -fx-text-fill: white;" text="–" />
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="tableView" editable="true">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="colNumero" prefWidth="33.6" text="Nº" />
                                        <TableColumn fx:id="colNivel" prefWidth="42.4" text="NIVEL" />
                                        <TableColumn fx:id="colCodigo" prefWidth="102.4" text="CODIGO" />
                                        <TableColumn fx:id="colMateria" prefWidth="276.8" text="MATERIA" />
                                        <TableColumn fx:id="colEstado" prefWidth="107.2" text="ESTADO" />
                                        <TableColumn fx:id="colDificultad" prefWidth="87.2" text="DIFICULTAD" />
                                        <TableColumn fx:id="colDescripcion" prefWidth="213.6" text="DESCRIPCION" />
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <Tab text="Recomendaciones">
                    <content>
                        <BorderPane style="-fx-background-color: #f0f2f5;">
                            <top>
                                <VBox alignment="CENTER" style="-fx-padding: 20;">
                                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Generador de Plan de Estudios" />
                                    <Label style="-fx-text-fill: #606770;" text="Calcula el tiempo estimado para terminar tu carrera basado en tu progreso actual." />
                                    <Button fx:id="generarPlanButton" onAction="#onGenerarPlanClick" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #1877f2; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10 20 10 20;" text="Generar Planes de Estudio">
                                        <VBox.margin>
                                            <Insets top="15.0" />
                                        </VBox.margin>
                                    </Button>
                                </VBox>
                            </top>
                            <center>
                                <VBox spacing="15" style="-fx-padding: 0 20 20 20;">
                                    <TitledPane fx:id="casoIdealPane" animated="false" text="Caso Ideal Personalizado">
                                        <content>
                                            <VBox spacing="10" style="-fx-padding: 10;">
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="Máx. materias por semestre regular:" />
                                                    <TextField fx:id="semestreCargaField" prefWidth="50" text="5" />
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="Máx. materias en curso de temporada:" />
                                                    <TextField fx:id="temporadaCargaField" prefWidth="50" text="1" />
                                                </HBox>
                                                <TextArea fx:id="casoIdealTextArea" editable="false" prefHeight="150.0" wrapText="true" />
                                            </VBox>
                                        </content>
                                    </TitledPane>
                                    <TitledPane fx:id="casoOptimistaPane" animated="false" collapsible="false" text="Caso Optimista (Máxima Carga Permitida)">
                                        <TextArea fx:id="casoOptimistaTextArea" editable="false" prefHeight="150.0" wrapText="true" />
                                    </TitledPane>
                                </VBox>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f2f5; -fx-padding: 10;">
            <children>
                <Label fx:id="progresoLabel" style="-fx-font-weight: bold;" text="Progreso:" />
                <ProgressBar fx:id="progresoBarra" prefHeight="18.0" prefWidth="608.0" progress="0.0" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" onAction="#onLogoutButtonClick" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión" />
            </children>
        </HBox>
    </bottom>

</BorderPane>

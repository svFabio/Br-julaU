<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.windowsxp.fsv.fcyt.PlanController">

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Bienvenido">
                    <content>
                        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f2f5;">
                            <children>
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="¡Bienvenido al Sistema!" />
                                <Label style="-fx-font-size: 16px;" text="Navega a la pestaña 'ElPlan' para ver tu progreso." />
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="ElPlan">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0">
                            <children>
                                <TableView fx:id="tableView" editable="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="colNumero" prefWidth="33.6" text="Nº" />
                                        <TableColumn fx:id="colNivel" prefWidth="42.4" text="NIVEL" />
                                        <TableColumn fx:id="colCodigo" prefWidth="102.4" text="CODIGO" />
                                        <TableColumn fx:id="colMateria" prefWidth="276.8" text="MATERIA" />
                                        <TableColumn fx:id="colEstado" prefWidth="107.20001220703125" text="ESTADO" />
                                        <TableColumn fx:id="colDificultad" prefWidth="87.20001220703125" text="DIFICULTAD" />
                                        <TableColumn fx:id="colDescripcion" prefWidth="213.60003662109375" text="DESCRIPCION" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #f0f2f5; -fx-padding: 10;">
            <children>
                <Button fx:id="logoutButton" onAction="#onLogoutButtonClick" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
